
.player-wrap
    #player
        audio#audio-player(src=`/public/client/source/${songs[1].music}.mp3`, control)
        .song-info
            .control
                img(src=`${songs[1].albumCover}`)
                i#play-btn.fa.fa-play
            .detail 
                span.title=songs[1].title
                span.singer=songs[1].singer
                if(currentMusic)
                    span=currentMusic
            .heart-vol 
                i.fa.fa-heart
                .volumn
                    i#mute-toggle.fa.fa-volume-up
                    input#volume-slider(type="range", min="0", max="1", step="0.1", value="0.5")

        .prograss
            .bar
                .current-bar
            .time
                span.current 00:00
                span.full 
script.
 