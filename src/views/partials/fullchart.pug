
- const thItem = ["Rank", "Song", "Play","heart", "Listen"];
#fullchart 
    .chart-wrap 
        h1 üçã TOP 10 üçã 
        table
            colgroup 
                col(style="width:13%")
                col(style="width:50%")
                col(style="width:13%")
                col(style="width:13%")
                col(style="width:13%")
            thead 
                tr
                    each category in thItem 
                        th=category
            tbody 
                each song, index in songsTop10 
                    tr(data-song-id=song._id music=song.music onclick="handleSongClick(this)").each-song
                        td.rank
                            span.rank= index+1
                        td.song
                            img(src=`${song.albumCover}`).coverImg
                            div.songInfo
                                span.title= song.title
                                span.singer= song.singer
                        td 
                            span.playcnt= song.meta.play
                        td 
                            span.heartcnt= song.meta.heart
                        td 
                            i.fa.fa-play(style="cursor:pointer")



